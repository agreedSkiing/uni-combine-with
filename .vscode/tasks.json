{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "group": "none",
      "problemMatcher": [],
      "label": "setup",
      "command": "npm install && mvn dependency:copy-dependencies"
    },
    {
      "type": "shell",
      "group": "test",
      "problemMatcher": [],
      "label": "test",
      "command": "mvn -B clean test --fae | tee run-$(date +%Y-%m-%dT%H:%M:%S%:z).log"
    },
    {
      "type": "shell",
      "group": "test",
      "problemMatcher": [],
      "label": "lint",
      "command": "npx prettier --check ."
    },
    {
      "type": "shell",
      "group": "build",
      "problemMatcher": [],
      "label": "format",
      "command": "npx prettier --write ."
    }
  ]
}
